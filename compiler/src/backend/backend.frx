import "c/c.frx";
import "../frontend/syntax/program.frx";

export enum BackendType : u8
{
    BACKEND_TYPE_NATIVE,
    BACKEND_TYPE_LLVM,

    BACKEND_TYPE_COUNT
}

export i32 backend_generate_code(BackendType backend, ASTProgram* program)
{
    assert(backend < BACKEND_TYPE_COUNT);

    i32 success = 0;

    switch(backend)
    {
        case BACKEND_TYPE_NATIVE:
        {
            success = c_generate_code(program);

            break;
        }
        default:
        {
            assert(false);

            break;
        }
    }

    return success;
}
