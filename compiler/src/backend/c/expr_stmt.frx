import "c.frx";
import "expr.frx";
import "../../frontend/ast/expr_stmt.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export void transpile_expr_stmt(Transpiler* transpiler, ExprStmt* expr_stmt)
{
    frx::assert(transpiler != nullptr);

    frx::assert(expr_stmt != nullptr);

    transpile_expr(transpiler, expr_stmt->expr);
    fprintf(transpiler->file, ";\n");
}
