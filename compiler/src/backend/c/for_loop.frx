import "c.frx";
import "expr.frx";
import "scope.frx";
import "../../frontend/ast/for_loop.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export void transpile_for_loop(Transpiler* transpiler, AST::ForLoop* for_loop)
{
    frx::assert(transpiler != nullptr);

    frx::assert(for_loop != nullptr);

    fprintf(transpiler->file, "for(");
    transpile_expr(transpiler, for_loop->initialization);
    fprintf(transpiler->file, "; ");
    transpile_expr(transpiler, for_loop->condition);
    fprintf(transpiler->file, "; ");
    transpile_expr(transpiler, for_loop->iteration);
    fprintf(transpiler->file, ")\n");
    transpile_scope(transpiler, for_loop->scope);
}
