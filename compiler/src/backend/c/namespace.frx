import "std/libc.frx";
import "c.frx";
import "namespace_scope.frx";
import "../../core/list.frx";
import "../../frontend/ast/namespace.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export void transpile_namespace(mut Transpiler* transpiler,
    AST::Namespace* namespace_node)
{
    core::Namespace* old_namespace = transpiler->current_namespace;
    transpiler->current_namespace = namespace_node->ns;

    mut usize i;
    for(i = 0; i < List::size(&namespace_node->namespace_scope); i = i + 1)
    {
        AST::NamespaceScope* namespace_scope = List::get(&namespace_node->namespace_scope, i);
        transpile_namespace_scope(transpiler, namespace_scope);
    }

    transpiler->current_namespace = old_namespace;
}

export void transpile_namespace_resolution(Transpiler* transpiler,
    mut core::Namespace* ns)
{
    frx::assert(transpiler != nullptr);

    while(ns != nullptr)
    {
        if(libc::strcmp(ns->name, "") != 0)
        {
            fprintf(transpiler->file, "%s_", ns->name);
        }

        ns = ns->parent;
    }
}
