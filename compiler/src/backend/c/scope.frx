import "c.frx";
import "stmt.frx";
import "../../core/list.frx";
import "../../frontend/ast/scope.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export void transpile_scope(Transpiler* transpiler, AST::Scope* scope)
{
    frx::assert(transpiler != nullptr);

    frx::assert(scope != nullptr);

    fprintf(transpiler->file, "{\n");

    mut usize i;
    for(i = 0; i < list_size(&scope->stmts); i = i + 1)
    {
        AST::Stmt* stmt = list_get(&scope->stmts, i);
        transpile_stmt(transpiler, stmt);
    }

    fprintf(transpiler->file, "}\n");
}
