export import "list.frx";

export enum OptionID : u8
{
    NONE,
    POS_ARG,
    HELP,
    OUTPUT,
    TARGET,
    EMIT_AST,
    LINK,
    LIBRARY_PATH
}

export struct Config
{
    char* output;
    char* stdlib_path;
    char* library_path;
    b8 emit_ast;
    List link_targets;
}

mut Config config;

export void config_init()
{
    config.output = "a.out";
    config.stdlib_path = "/usr/local/lib/furox/stdlib";
    config.library_path = nullptr;
    list_init(&config.link_targets);
}

export Config* get_config()
{
    return &config;
}
