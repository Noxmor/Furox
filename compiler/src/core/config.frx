export enum OptionID : u8
{
    NONE,
    POS_ARG,
    HELP,
    OUTPUT,
    TARGET,
    EMIT_AST,
    LINK
}

struct Config
{
    char* output;
    b8 emit_ast;
    List link_targets;
}

Config config;

export void config_init()
{
    config.output = "a.out";
    list_init(&config.link_targets);
}

export Config* get_config()
{
    return &config;
}
