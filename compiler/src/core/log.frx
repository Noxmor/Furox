import "../frontend/core/token.frx";

export void log_error(char* filepath, SourceLocation location, char* format, ...)
{
    fprintf(stderr, "[ERROR]:%s:%zu:%zu: ", filepath, location.line,
        location.column);

    va_list args;
    va_start(args, format);
    vfprintf(stderr, format, args);
    va_end(args);

    fprintf(stderr, "\n");
}
