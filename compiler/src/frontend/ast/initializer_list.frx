import "../../core/arena.frx";
import "ast.frx";
import "expr.frx";
export import "../../core/list.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

namespace AST
{
    export struct InitializerList
    {
        List values;
    }

    namespace InitializerList
    {
        export InitializerList* new(Arena* arena)
        {
            InitializerList* list = arena_alloc(arena, frx::sizeof(InitializerList));

            list_init(&list->values);

            return list;
        }

        export void print(InitializerList* list, mut FILE* file, usize depth)
        {
            frx::assert(list != nullptr);

            frx::assert(file != nullptr);

            print_depth(file, depth);

            fprintf(file, "%s\n", "initializer-list");

            mut usize i;
            for(i = 0; i < list_size(&list->values); i = i + 1)
            {
                AST::Expr* value = list_get(&list->values, i);
                AST::Expr::print(value, file, depth);
            }
        }
    }
}
