import "../../core/arena.frx";
import "ast.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export struct IntLiteral
{
    u64 value;
}

export IntLiteral* int_literal_new(Arena* arena, u64 value)
{
    mut IntLiteral* int_literal = arena_alloc(arena, frx::sizeof(IntLiteral));

    int_literal->value = value;

    return int_literal;
}

export void int_literal_print(IntLiteral* literal, mut FILE* file, usize depth)
{
    frx::assert(literal != nullptr);

    frx::assert(file != nullptr);

    print_depth(file, depth);

    fprintf(file, "%s (%zu)\n", "int-literal", literal->value);
}
