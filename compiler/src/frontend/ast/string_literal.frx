import "../../core/arena.frx";
import "ast.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

export struct StringLiteral
{
    char* literal;
}

export StringLiteral* string_literal_new(Arena* arena, char* literal)
{
    frx::assert(literal != nullptr);

    mut StringLiteral* string_literal = arena_alloc(arena, frx::sizeof(StringLiteral));

    string_literal->literal = literal;

    return string_literal;
}

export void string_literal_print(StringLiteral* string_literal, mut FILE* file, usize depth)
{
    frx::assert(string_literal != nullptr);

    frx::assert(file != nullptr);

    print_depth(file, depth);

    fprintf(file, "%s (%s)\n", "string-literal", string_literal->literal);
}
