import "../../core/arena.frx";
import "ast.frx";

extern struct FILE;

extern
{
    i32 fprintf(mut FILE* stream, char* format, ...);
}

namespace AST
{
    export struct StructMember
    {
        char* name;
    }

    namespace StructMember
    {
        export StructMember* new(Arena* arena, char* name)
        {
            frx::assert(name != nullptr);

            mut StructMember* member = arena_alloc(arena, frx::sizeof(StructMember));

            member->name = name;

            return member;
        }

        export void print(StructMember* member, mut FILE* file, usize depth)
        {
            frx::assert(member != nullptr);

            frx::assert(file != nullptr);

            print_depth(file, depth);

            fprintf(file, "%s (%s)\n", "struct-member", member->name);
        }
    }
}
