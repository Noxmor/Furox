}

export void error_namespace_is_reserved(char* filepath, SourceLocation loc,
    Namespace* ns)
{
    usize size = 1 + strlen(ns->name);

    Namespace* temp = ns->parent;
    while(temp != nullptr)
    {
        size = size + strlen(token_type_to_str(TOKEN_TYPE_NAMESPACE_RESOLUTION))
            + strlen(temp->name);
        temp = temp->parent;
    }

    char[size] ns_str;
    strcpy(ns_str, ns->name);

    ns = ns->parent;

    while(ns != nullptr)
    {
        strcat(ns_str, token_type_to_str(TOKEN_TYPE_NAMESPACE_RESOLUTION));
        strcat(ns_str, ns->name);

        ns = ns->parent;
    }

    log_error(filepath, loc, "Invalid namespace, because namespace %s is reserved!",
        ns_str);
}

