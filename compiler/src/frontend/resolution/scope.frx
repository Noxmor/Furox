import "../ast/scope.frx";
import "../core/parser.frx";
import "stmt.frx";

export void scope_resolve_symbols(Parser* parser, Scope* scope)
{
    frx::assert(parser != nullptr);

    frx::assert(scope != nullptr);

    mut usize i;
    for(i = 0; i < list_size(&scope->stmts); ++i)
    {
        Stmt* stmt = list_get(&scope->stmts, i);
        stmt_resolve_symbols(parser, stmt);
    }
}
