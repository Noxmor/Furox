import "../ast/struct_def.frx";
import "../core/parser.frx";
import "type_specifier.frx";

export void struct_field_resolve_symbols(Parser* parser, StructField* struct_field)
{
    frx::assert(parser != nullptr);

    frx::assert(struct_field != nullptr);

    type_specifier_resolve_symbols(parser, struct_field->type);
}

export void struct_def_resolve_symbols(Parser* parser, StructDef* struct_def)
{
    frx::assert(parser != nullptr);

    frx::assert(struct_def != nullptr);

    StructSymbol* symbol = &struct_def->symbol;

    mut usize i;
    for(i = 0; i < list_size(&symbol->fields); ++i)
    {
        StructField* field = list_get(&symbol->fields, i);
        struct_field_resolve_symbols(parser, field);
    }
}
