import "expr.frx";
import "scope.frx";
import "../core/parser.frx";
import "../ast/for_loop.frx";

export void for_loop_sema(Parser* parser, ForLoop* for_loop)
{
    frx::assert(parser != nullptr);

    frx::assert(for_loop != nullptr);

    expr_sema(parser, for_loop->initialization);
    expr_sema(parser, for_loop->condition);
    expr_sema(parser, for_loop->iteration);
    scope_sema(parser, for_loop->scope);
}
