import "expr.frx";
import "scope.frx";
import "../core/parser.frx";
import "../ast/if_stmt.frx";

export void if_stmt_sema(Parser* parser, IfStmt* if_stmt)
{
    frx::assert(parser != nullptr);

    frx::assert(if_stmt != nullptr);

    expr_sema(parser, if_stmt->condition);
    scope_sema(parser, if_stmt->if_block);

    if(if_stmt->else_block != nullptr)
    {
        scope_sema(parser, if_stmt->else_block);
    }
}
