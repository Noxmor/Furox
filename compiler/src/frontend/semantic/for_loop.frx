import "expr.frx";
import "scope.frx";
import "../core/parser.frx";
import "../ast/for_loop.frx";

export void analyze_for_loop(Parser* parser, AST::ForLoop* for_loop)
{
    frx::assert(parser != nullptr);

    frx::assert(for_loop != nullptr);

    analyze_expr(parser, for_loop->initialization);
    analyze_expr(parser, for_loop->condition);
    analyze_expr(parser, for_loop->iteration);
    analyze_scope(parser, for_loop->scope);
}
