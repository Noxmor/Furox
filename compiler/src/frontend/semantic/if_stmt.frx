import "expr.frx";
import "scope.frx";
import "../core/parser.frx";
import "../ast/if_stmt.frx";

export void analyze_if_stmt(Parser* parser, AST::IfStmt* if_stmt)
{
    frx::assert(parser != nullptr);

    frx::assert(if_stmt != nullptr);

    analyze_expr(parser, if_stmt->condition);
    analyze_scope(parser, if_stmt->if_block);

    if(if_stmt->else_block != nullptr)
    {
        analyze_scope(parser, if_stmt->else_block);
    }
}
