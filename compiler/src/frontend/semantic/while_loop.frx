import "expr.frx";
import "scope.frx";
import "../core/parser.frx";
import "../ast/while_loop.frx";

export void analyze_while_loop(Parser* parser, AST::WhileLoop* while_loop)
{
    frx::assert(parser != nullptr);

    frx::assert(while_loop != nullptr);

    analyze_expr(parser, while_loop->condition);
    analyze_scope(parser, while_loop->scope);
}
