import "../core/namespace.frx";
import "../core/scope.frx";

export struct FuncSymbol
{
    Scope* scope;
    Namespace* ns;
    char* name;
    b8 exported;
    b8 external;
}

export void func_symbol_init(FuncSymbol* symbol, Scope* scope, Namespace* ns,
    char* name, b8 exported, b8 external)
{
    assert(symbol != nullptr);

    assert(scope != nullptr);

    assert(name != nullptr);

    symbol->scope = scope;
    symbol->ns = ns;
    symbol->name = name;
    symbol->exported = exported;
    symbol->external = external;
}

struct FuncTableEntry
{
    FuncSymbol* symbol;
    FuncTableEntry* next;
}

macro FUNC_TABLE_CAPACITY = 128;

export struct FuncTable
{
    FuncTableEntry*[FUNC_TABLE_CAPACITY] entries;
}

export void func_table_init(FuncTable* table)
{
    assert(table != nullptr);

    memset(table, 0, sizeof(FuncTable));
}

export FuncSymbol* func_table_find_r(FuncTable* table, Namespace* ns,
    char* name)
{
    FuncSymbol* symbol = func_table_find(table, ns, name);
    while(symbol == nullptr && ns != nullptr)
    {
        ns = ns->parent;
        symbol = func_table_find(table, ns, name);
    }

    return symbol;
}

export FuncSymbol* func_table_find(FuncTable* table, Namespace* ns, char* name)
{
    assert(table != nullptr);

    assert(name != nullptr);

    u64 index = hash_djb2(name) % FUNC_TABLE_CAPACITY;
    FuncTableEntry* entry = table->entries[index];

    while(entry != nullptr)
    {
        FuncSymbol* symbol = entry->symbol;

        if(strcmp(symbol->name, name) == 0 && namespace_equals(symbol->ns, ns))
        {
            return symbol;
        }

        entry = entry->next;
    }

    return nullptr;
}

export b8 func_table_insert(FuncTable* table, FuncSymbol* symbol)
{
    assert(table != nullptr);

    assert(symbol != nullptr);

    u64 index = hash_djb2(symbol->name) % FUNC_TABLE_CAPACITY;
    FuncTableEntry* entry = table->entries[index];

    while(entry != nullptr)
    {
        FuncSymbol* existing_symbol = entry->symbol;

        if(strcmp(existing_symbol->name, symbol->name) == 0
            && namespace_equals(existing_symbol->ns, symbol->ns))
        {
            return false;
        }

        entry = entry->next;
    }

    FuncTableEntry* new_entry = malloc(sizeof(FuncTableEntry));
    new_entry->symbol = symbol;
    new_entry->next = table->entries[index];

    table->entries[index] = new_entry;

    return true;
}
