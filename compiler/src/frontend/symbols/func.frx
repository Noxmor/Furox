import "std/libc.frx";
export import "../ast/namespace_resolution.frx";
export import "../core/namespace.frx";
export import "../core/scope.frx";
import "../../core/hash.frx";

export struct FuncSymbol
{
    CoreScope* scope;
    CoreNamespace* ns;
    char* name;
    b8 exported;
    b8 external;
}

export void func_symbol_init(mut FuncSymbol* symbol, CoreScope* scope,
    CoreNamespace* ns, char* name, b8 exported, b8 external)
{
    frx::assert(symbol != nullptr);

    frx::assert(scope != nullptr);

    frx::assert(name != nullptr);

    symbol->scope = scope;
    symbol->ns = ns;
    symbol->name = name;
    symbol->exported = exported;
    symbol->external = external;
}
