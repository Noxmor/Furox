import "std/libc.frx";
export import "../core/namespace.frx";
export import "../core/scope.frx";
export import "../../core/list.frx";
import "../../core/hash.frx";

export struct StructSymbol
{
    CoreScope* scope;
    CoreNamespace* ns;
    char* name;
    List fields;
    b8 exported;
    b8 external;
}

export void struct_symbol_init(mut StructSymbol* symbol, CoreScope* scope,
    CoreNamespace* ns, char* name, b8 exported, b8 external)
{
    frx::assert(symbol != nullptr);

    frx::assert(scope != nullptr);

    frx::assert(name != nullptr);

    symbol->scope = scope;
    symbol->ns = ns;
    symbol->name = name;
    list_init(&symbol->fields);
    symbol->exported = exported;
    symbol->external = external;
}
