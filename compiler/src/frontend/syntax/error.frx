export import "../ast/error.frx";
import "../core/parser.frx";

namespace AST::Error
{
    export Error* parse(Parser* parser)
    {
        frx::assert(parser != nullptr);

        SourceLocation start = Parser::current_location(parser);

        Parser::panic(parser);

        mut Error* error = new(&parser->arena);

        error->range.start = start;
        error->range.end = Parser::current_location(parser);

        return error;
    }
}
