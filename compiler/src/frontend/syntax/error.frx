export import "../ast/error.frx";
import "../core/parser.frx";

export Error* error_parse(Parser* parser)
{
    frx::assert(parser != nullptr);

    SourceLocation start = parser_current_location(parser);

    parser_panic(parser);

    mut Error* error = error_new(&parser->arena);

    error->range.start = start;
    error->range.end = parser_current_location(parser);

    return error;
}
