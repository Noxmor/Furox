export import "../ast/expr_stmt.frx";
import "expr.frx";
import "../core/parser.frx";

namespace AST::ExprStmt
{
    export ExprStmt* parse(Parser* parser)
    {
        frx::assert(parser != nullptr);

        Expr* expr = AST::Expr::parse(parser);

        parser_eat(parser, TokenType::SEMICOLON);

        return new(&parser->arena, expr);
    }
}
