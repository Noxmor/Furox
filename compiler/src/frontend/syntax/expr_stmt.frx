export import "../ast/expr_stmt.frx";
import "expr.frx";
import "../core/parser.frx";

export ExprStmt* expr_stmt_parse(Parser* parser)
{
    frx::assert(parser != nullptr);

    Expr* expr = expr_parse(parser);

    parser_eat(parser, TokenType::SEMICOLON);

    return expr_stmt_new(&parser->arena, expr);
}
