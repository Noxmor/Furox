export import "../ast/unresolved_identifier.frx";
import "namespace_resolution.frx";
import "../core/namespace.frx";
import "../core/parser.frx";
import "../core/scope.frx";

export UnresolvedIdentifier* unresolved_identifier_parse(Parser* parser, NamespaceResolution* resolution, SourceLocation start)
{
    frx::assert(parser != nullptr);

    char* name = parser->token->identifier;
    CoreScope* scope = parser->current_scope;

    SourceLocation end = parser_current_location(parser);

    parser_eat(parser, TokenType::IDENTIFIER);

    mut UnresolvedIdentifier* unresolved_identifier = unresolved_identifier_new(&parser->arena, resolution, name, scope);

    unresolved_identifier->range.start = start;
    unresolved_identifier->range.end = end;

    return unresolved_identifier;
}
